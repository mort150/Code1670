<body>
    <center>
        <h1 style="color:black;">Here is Login Page</h1>
    </center>
    <div>
        <form action="/login" method="post">
            <div class="form-floating">
                <input class="form-control redText" type="text" name="txtName" id="txtName" placeholder="name@example.com">
                <label for="txtName">User Name</label>
            </div>
            <div class="form-floating">
                <input class="form-control" type="password" name="txtPass" id="txtPass"
                    placeholder="Enter the password">
                <label for="txtPass">Password</label>
            </div>
            {{!-- User name: <input type="text" name="txtName" id="">
            <br>
            Password: <input type="password" name="txtPass" id="">
